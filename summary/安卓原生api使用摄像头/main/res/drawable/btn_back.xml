<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:radius="8dp"></corners>
            <gradient android:angle="90" android:startColor="#aa0f00ec" android:centerColor="#aa000000" android:endColor="#ff0000"></gradient>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="8dp"></corners>
            <gradient android:angle="90" android:centerY="50%" android:startColor="#aa008B8B" android:centerColor="#ee00688B" android:endColor="#aa008B8B"></gradient>
        </shape>
    </item>
</selector>